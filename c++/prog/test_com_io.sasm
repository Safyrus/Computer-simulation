# adr of devices:
# disk : 0000 - BFFF
# ram  : C000 - DFFF
# key  : E000 - E0FF
# scr  : E100 - E1FF


# Setup screen
    SET 10 E1 00 # resX
    SET 10 E1 01 # resY
    SET 00 E1 02 # mode

# While ...
MAIN:
    # Get char from keyboard
    GET $A E0 00

    # Check if something was press
    CMP $A 00

    # if not, redo
    JMP 04 MAIN

    # if ESC was press then stop else continue
    CMP $A 1B
    JMP 04 STOP

    # else send random value to the pixel equal to the char value
    ADD $B $A 03
    SET $R E1 $B
    GET $C E1 $B

    # loop
    JMP $F MAIN
STOP:
    OFF